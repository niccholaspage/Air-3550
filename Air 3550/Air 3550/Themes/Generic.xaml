<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Air_3550.Controls">

    <Style TargetType="local:AirportSuggestBox" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AirportSuggestBox">
                    <StackPanel>
                        <TextBlock Text="{TemplateBinding Label}"></TextBlock>
                        <AutoSuggestBox Name="SuggestBox" Width="300" AutomationProperties.Name="Basic AutoSuggestBox"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
