<Page
    x:Class="Air_3550.Views.PaymentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Air_3550.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel Margin="5 45 0 0">
        <StackPanel Orientation="Vertical">
            <ContentControl x:Name="DepartureFlightPathControl" ContentTemplate="{StaticResource RouteListViewTemplate}"></ContentControl>
            <!-- Show return one here too. -->
        </StackPanel>
    </RelativePanel>
</Page>
