<Page
    x:Class="Air_3550.Views.PaymentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Air_3550.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:util="using:Air_3550.Util"
    xmlns:converters="using:Air_3550.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"></converters:BoolToVisibilityConverter>
    </Page.Resources>

    <RelativePanel Margin="5 45 0 0" >
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <ContentControl x:Name="DepartureFlightPathControl" ContentTemplate="{StaticResource PaymentListViewTemplate}"/>
                <ContentControl x:Name="ReturnFlightPathControl" ContentTemplate="{StaticResource PaymentListViewTemplate}" Visibility="{x:Bind ViewModel.IsReturnFlight, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
            <RelativePanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="200" Width="200" Background="Gray">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Run Text="Departure Flight Cost:"/>
                    <Run Text="{x:Bind ViewModel.DepartingFlightPath.Price}"/>
                    </TextBlock>
                    <TextBlock Visibility="{x:Bind ViewModel.IsReturnFlight, Converter={StaticResource BoolToVisibilityConverter}}"
                           HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Run Text="Return Flight Cost:"/>
                    <Run Text="{x:Bind ViewModel.ReturnFlightPath.Price}"/>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Run Text="Total Flight Cost:"/>
                    <Run Text="{x:Bind ViewModel.TotalCost}"/>
                    </TextBlock>
                </StackPanel>
            </RelativePanel>
        </StackPanel>
    </RelativePanel>
</Page>
