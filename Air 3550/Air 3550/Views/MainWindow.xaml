<Window
    x:Class="Air_3550.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Air_3550"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel>
        <Image Source="ms-appx:///Assets/logo.svg" Height="280"></Image>
        <StackPanel x:Name="stack" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True">
            <local:AirportSuggestBox Label="Departure City" Margin="3" VerticalAlignment="Bottom" />
            <local:AirportSuggestBox Label="Arrival City" Margin="3" VerticalAlignment="Bottom"/>
            <CalendarDatePicker PlaceholderText="Pick a date" Margin="3" Header="Departure" VerticalAlignment="Bottom" />
            <CalendarDatePicker PlaceholderText="Pick a date" Margin="3" Header="Arrival" VerticalAlignment="Bottom" />
            <Button x:Name="SearchButton" Click="SearchButton_Click" Margin="3" VerticalAlignment="Bottom">Search</Button>
        </StackPanel>
        <Button RelativePanel.AlignTopWithPanel="true" RelativePanel.AlignRightWithPanel="true" Margin="5">Login</Button>
    </RelativePanel>
</Window>
